{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    // TODO: Remove if unused
    "jsx": "react-jsx",
    "allowJs": true,

    // Bundler mode
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "noEmit": true,

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Disable these if they cause problems
    "noUnusedLocals": true,
    // Disabled for now because our fetch method doesn't use the request
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": true
  }
}